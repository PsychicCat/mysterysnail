extends layout

block content
    h1 Track Your Order
    .content-wrapper
        form#track.pure-form(action="/track"  method="post")
            .pure-u-1-3
                label(for="uuid") Order ID:
                input(type="text" name="uuid" id="uuid" placeholder="Order ID" required)
                button.pure-button.pure-button-primary(type="submit") Submit