extends layout

block content
    h1 Track Your Order Status
    .content
        form#track.pure-form.pure-form-stacked(action="/track"  method="post")
            fieldset
                legend Please enter your Order ID:
                .pure-g
                    .pure-u-1.pure-u-md-1-3
                    .pure-u-1.pure-u-md-1-3
                        label(for="uuid") Order ID:
                        input.pure-u-1(type="text" name="uuid" id="uuid" placeholder="Order ID" required)
                        button.pure-u-1.pure-button.pure-button-primary(type="submit") Submit