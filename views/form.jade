extends layout

block content
    .content
        form#order.pure-form.pure-form-stacked(action="/order" method="post")
            fieldset
                legend Please enter your message and destination address:
                .pure-g
                    .pure-u-1.pure-u-md-1-2
                        label(for="firstName") First Name
                        input.pure-u-23-24.pure-u-md-22-24(type="text" name="firstName" placeholder="First Name" id="firstName" required)
                    .pure-u-1.pure-u-md-1-2
                        label(for="lastName") Last Name
                        input.pure-u-23-24.pure-u-md-22-24(type="text" name="lastName" id="lastName" placeholder="Last Name")
                    .pure-u-1.pure-u-md-1-2
                        label(for="address") Address
                        input.pure-u-23-24.pure-u-md-22-24(type="text" name="address" id="address" placeholder="Address" required)
                    .pure-u-1.pure-u-md-1-2
                        label(for="address2") Address Line 2
                        input.pure-u-23-24.pure-u-md-22-24(type="text" name="address2" id="address2" placeholder="Address Line 2")
                    .pure-u-1.pure-u-md-1-4
                        label(for="City") City
                        input.pure-u-23-24.pure-u-md-20-24(type="text" name="city" id="city" placeholder="City" required)
                    .pure-u-1.pure-u-md-1-4
                        label(for="State") State
                        input.pure-u-23-24.pure-u-md-20-24(type="text" name="state" id="state" placeholder="State" required)
                    .pure-u-1.pure-u-md-1-4
                        label(for="zip") ZIP / Postal Code
                        input.pure-u-23-24.pure-u-md-20-24(type="text" name="zip" id="zip" placeholder="ZIP / Postal Code" required)
                    .pure-u-1.pure-u-md-1-4
                        label(for="country") Country
                        input.pure-u-23-24.pure-u-md-20-24(type="text" name="country" id="country" placeholder="Country" required)
                    .pure-u-1
                        label(for="message") Message
                        .l-box
                            textarea.pure-u-23-24(form="order" name="message" id="message" rows="15" placeholder="Your Message")
                    .pure-u-1.pure-u-md-1-3
                    .pure-u-1.pure-u-md-1-3
                        button#submit.pure-button.pure-u-23-24.pure-button-primary(type="submit") Submit Order